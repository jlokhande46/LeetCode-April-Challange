class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        if(nums.size()==0) return 0;
        if(nums.size()==1) return nums[0];
        
        int maxSum=nums[0];
        for(int i=1;i<nums.size();++i){
            if(nums[i-1]>0)
                nums[i]+=nums[i-1];
            maxSum=max(maxSum,nums[i]);
        }
        return maxSum;
    }
};
